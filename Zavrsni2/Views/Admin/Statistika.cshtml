@model Zavrsni2.Models.Statistika
@{
    ViewBag.Title = "Statistika";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Statistika</h2>

<div class="row">
    <div class="col-md-6">
        <canvas id="myChart"></canvas>

    </div>
    <div class="col-md-6">
        <canvas id="myChart2"></canvas>

    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
<script>

    var data="@Html.Raw(ViewBag.Najprodavaniji)"

    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels:["@Model.Najprodavaniji[0].Ime","@Model.Najprodavaniji[1].Ime","@Model.Najprodavaniji[2].Ime","@Model.Najprodavaniji[3].Ime","@Model.Najprodavaniji[4].Ime"],
            datasets: [{
                data: ["@Model.Najprodavaniji[0].ProdanaKolicina", "@Model.Najprodavaniji[1].ProdanaKolicina", "@Model.Najprodavaniji[2].ProdanaKolicina", "@Model.Najprodavaniji[3].ProdanaKolicina", "@Model.Najprodavaniji[4].ProdanaKolicina"],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 2
            }]
        },
        options: {
            title: {
                display: true,
                text:"Najprodavaniji proizvodi"
            },
            
        }
    });

    var ctx2 = document.getElementById("myChart2").getContext('2d');
    var myChart = new Chart(ctx2, {
        type: 'bar',
        data: {
            labels:["@Model.Najneprodavaniji[0].Ime","@Model.Najneprodavaniji[1].Ime","@Model.Najneprodavaniji[2].Ime","@Model.Najneprodavaniji[3].Ime","@Model.Najneprodavaniji[4].Ime"],
            datasets: [{
                label: 'Najneprodavaniji proizvodi',
                data: ["@Model.Najneprodavaniji[0].ProdanaKolicina", "@Model.Najneprodavaniji[1].ProdanaKolicina", "@Model.Najneprodavaniji[2].ProdanaKolicina", "@Model.Najneprodavaniji[3].ProdanaKolicina", "@Model.Najneprodavaniji[4].ProdanaKolicina"],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            title: {
                display: true,
                text:"Najneprodavaniji proizvodi"
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

</script>