@model Zavrsni2.Models.Proizvod
@{
    /**/
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = "Dodaj";
}
<h2>Dodaj</h2>
<div>
    @using (Html.BeginForm("Create", "Proizvodi", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(c => c.Ime)
            @Html.TextBoxFor(c => c.Ime, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.Opis)
            @Html.TextBoxFor(c => c.Opis, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.KratakOpis)
            @Html.TextBoxFor(c => c.KratakOpis, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Kolicina)
            @Html.TextBoxFor(c => c.Kolicina, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @*@Html.LabelFor(c => c.Slika)
                @Html.TextBoxFor(c => c.Slika, new { @class = "form-control" })*@
            <input type="file" name="file" />
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Cijena)
            @Html.TextBoxFor(c => c.Cijena, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.DropDownListFor(model => model.Kategorija_ID, new SelectList(ViewBag.Kategorija, "ID", "Naziv"), "Izaberite kategoriju", new { @class = "form-control" })
        </div>
        @Html.HiddenFor(c => c.ID)
        <button class="btn btn-success" type="submit">Sacuvajte</button>
        <a style="margin-left: 121px;" class="btn btn-primary" href="@Url.Action("Index","Proizvodi")">Nazad</a>

    }
</div>